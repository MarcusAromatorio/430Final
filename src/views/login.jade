extends ./base.jade
block append style
  link(rel="stylesheet", type="text/css", href="/assets/style.css")
block body
  .wrapper
      nav
        .navlink
          a(href='/login') Login
      section#signup
        form#signupForm.mainForm(name='signupForm', action='/signup', method='POST')
          .pairing
            label(for='username') Username: 
            input#user(type='text', name='username', placeholder='username')
          .pairing
            label(for='pass') Password: 
            input#pass(type='password', name='pass', placeholder='password')
          a#loginSubmit.formSubmit(href='#') Sign In
      p#errorMessage
block scripts
  script(src="/assets/client.js")